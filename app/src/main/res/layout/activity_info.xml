<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InfoActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".09"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add todo"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:lineHeight="21sp"
            android:padding="20dp"
            android:background="#D93BC9"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintHeight_percent=".5">
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="To do escription: "
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/degree_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView
                android:id="@+id/degree"
                android:text="@string/app_name"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/create_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="To do create date"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="To do deadline"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/check_field"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="40dp"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintTop_toBottomOf="@id/info">
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rad_open"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Open"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/rad_development"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Development"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/rad_uploading"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Uploading"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/rad_reject"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Reject"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/rad_closed"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Closed"
                android:textSize="18sp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right|center_vertical"
        android:paddingEnd="25dp"
        app:layout_constraintHeight_percent=".16"
        app:layout_constraintTop_toBottomOf="@id/check_field">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_1"
            android:layout_width="167dp"
            android:layout_height="75dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ok"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#D93BC9"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>